                    <i class="fas fa-bars"></i>
                </button>
            </div>
            <nav>
                <ul>
                    <li>
                        <a href="/admin">
                            <i class="fas fa-home"></i>
                            <span>Inicio</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/user_admin">
                            <i class="fas fa-users"></i>
                            <span>Usuarios</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/pagos">
                            <i class="fas fa-money-bill-wave"></i>
                            <span>Pagos</span>
                        </a>
                    </li>
                    <li>
                        <a href="/admin/estadisticas">
                            <i class="fas fa-chart-bar"></i>
                            <span>Estadísticas</span>
                        </a>
                    </li>
                    <li>
